{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <div class="container py-4 my-4">
        <h1 class="text-center mt-4 pt-4 display-1 fw-bold">Mon profil</h1>
        
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 p-4 shadow rounded">
                <div class="table-responsive">
                    <table class="table table-bordered align-middle">
                        <thead>
                            <tr class="bg-primary text-white text-center">
                                <th scope="col">Informations</th>
                                <th scope="col">Détails</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="fw-bold">Nom</td>
                                <td>{{ user.nom }}</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Prénom</td>
                                <td>{{ user.prenom }}</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Email</td>
                                <td>{{ user.email }}</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Rôle</td>
                                <td>{{ user.roles | join(', ') }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <h3 class="mt-4 text-primary">Mes Annonces</h3>
                <div class="text-center mb-3">
                    <i class="bi bi-megaphone-fill text-primary fs-3 icon-animation"></i>
                </div>
                
                {% if annonces is not empty %}
                    <table class="table table-bordered mt-3">
                        <thead>
                            <tr class="bg-primary text-white text-center">
                                <th scope="col">Nom</th>
                                <th scope="col">Type</th>
                                <th scope="col">Prix</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for annonce in annonces %}
                                <tr>
                                    <td>{{ annonce.nom }}</td>
                                    <td>{{ annonce.type }}</td>
                                    <td>{{ annonce.prix }} €</td>
                                    <td class="text-center">
                                        <a href="{{ path('app_modifier_annonces', {'id': annonce.id}) }}" class="btn btn-warning btn-sm me-2">
                                            <i class="bi bi-pencil-fill"></i> Modifier
                                        </a>
                                        <a href="{{ path('app_supprimer_annonces', {'id': annonce.id}) }}" class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash-fill"></i> Supprimer
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i> Aucune annonce disponible.
                    </div>
                {% endif %}
                
                <div class="mt-4 text-center">
                    <a href="{{ path('app_annonces') }}" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Ajouter une annonce
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}